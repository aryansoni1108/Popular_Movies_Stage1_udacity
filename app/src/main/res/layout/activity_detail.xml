<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aryan.popularmoviesstage1.DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/movie_name_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/detailviewgradient"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Sample"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailimage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/no_image" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ddc0ff">

            <TextView
                android:id="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp"
                android:text="@string/release_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/date_label"

                android:paddingLeft="20dp"
                android:textSize="16sp"

                tools:text="10/10/2018" />

            <RatingBar
                android:id="@+id/RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"
                android:numStars="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_alignStart="@+id/date_label"
                android:layout_below="@+id/date_label"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:paddingStart="20dp"
                android:text="@string/ratings"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Rating_numView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/date_label"
                android:textColor="#ff002b"
                android:textSize="20sp"
                tools:text="9.99" />
            
        </RelativeLayout>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/synopsis_"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            tools:text="djdjjd"

            />
    </LinearLayout>
        

        </ScrollView>




